<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".setting">

    <androidx.cardview.widget.CardView
        android:layout_width="378dp"
        android:layout_height="461dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/userabout"
            android:layout_width="254dp"
            android:layout_height="49dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="340dp"

            android:text="about"
            android:textColor="#150F0F"

            android:textSize="17sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="230dp"

            android:text="Salik Aziz khan"
            android:textColor="#190E0E"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/useremail"
            android:layout_width="245dp"
            android:layout_height="31dp"

            android:layout_marginLeft="75dp"
            android:layout_marginTop="280dp"
            android:text="khansalikaziz786@gmail.com"
            android:textColor="#120A0A"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="152dp"
            android:layout_height="46dp"
            android:layout_marginStart="129dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="244dp"
            android:backgroundTint="#5AAC5D"
            android:text="back"
            android:textSize="18sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="53dp"
            android:src="@drawable/profilepic"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toTopOf="@+id/username" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:layout_marginLeft="80dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="User Profile"
            android:textColor="#150E0E"
            android:textSize="32sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>