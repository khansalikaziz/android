<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".gettingvideomodule">
    -

    <androidx.cardview.widget.CardView
        android:layout_width="372dp"
        android:layout_height="511dp"

        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="106dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="106dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="335dp"
            android:layout_height="181dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:srcCompat="@drawable/master" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="342dp"
            android:layout_height="58dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="210dp"
            android:layout_marginRight="6dp"
            android:text="IELTS Preparation Masterclass: A complete Guide to the IELTS"
            android:textColor="#0C0000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="265dp"
            android:layout_marginRight="6dp"
            android:text="Get all the essential information about the IELTS and the most effective preparation tips from an IELTS" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="310dp"
            android:layout_marginRight="6dp"
            android:text="Course Design by VisionMile"
            android:textColor="#100B0B" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="340dp"
            app:srcCompat="@drawable/star" />


        <Button
            android:id="@+id/button8"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/button_style"
            android:onClick="hit"
            android:text="Access Course"
            android:textColor="#F1F8F2"
            android:textStyle="bold"
            app:backgroundTint="#5AAC5D" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>